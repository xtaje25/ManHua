@using ManHuaAdmin.Models;
@{
    ViewBag.Title = "InfoEditView";
    Tab_GongZhongHao g = ViewBag.g;
}

<div class="pageContent">
    <form method="post" action="@Url.Content("~/GZH/InfoEdit")" enctype="multipart/form-data" class="pageForm required-validate" onsubmit="return iframeCallback(this, dialogAjaxDone);">
        <div class="pageFormContent" layoutH="56">
            <p>
                <label>公号名称：</label>
                <input readonly="readonly" name="name" class="textInput readonly" type="text" size="30" value="@(g!=null?g.F_GZHName:"")" />
                <input type="hidden" name="id" value="@(g!=null?g.F_Id:0)" />
            </p>
            <p style="height:auto">
                <label>公号LOGO：</label>
                <input id="logo" name="logo" type="file" accept="image/gif,image/jpeg,image/jpg,image/png" />
            </p>
            <p style="height:auto">
                <label>公号简介：</label>
                <textarea name="about" cols="30" rows="3" maxlength="4000">@(g!=null?g.F_About:"")</textarea>
            </p>
        </div>
        <div class="formBar">
            <ul>
                <li>
                    <div class="buttonActive"><div class="buttonContent"><button type="submit">保存</button></div></div>
                </li>
                <li>
                    <div class="button"><div class="buttonContent"><button type="button" class="close">取消</button></div></div>
                </li>
            </ul>
        </div>
    </form>
</div>